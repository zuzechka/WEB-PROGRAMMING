@model HOSPITAL.Models.HomeViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Моя главная страница</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .intro {
            height: 100vh;
            width: 100%;
            background-color:#f3f3f3;
        }

        .title {
            width: 100%;
            height: 140px;
            font-size: 120px;
            font-family: Montserrat, sans-serif;
            color: #181616;
            text-align: center;
            padding-top: 30px;
            border-bottom: 1px solid #181616;
        }

        .group{
            font-family: Montserrat;
            font-size: 30px;
            text-align:center;
            padding-top: 25px;
        }

        .link {
            text-decoration: none;
            transition: color 0.3s linear;
            padding-right: 200px;
            color: #181616;

        }

        .link:hover{
            color: #ddbebe;
        }

        .form{
            text-align:center;
            padding-top:200px;
            font-family:Montserrat;
        }

        .form_title{
            font-size:40px;
            font-weight:400;
            color:#181616;

        }

        .group_form{
            padding-top:15px;
            font-size:30px;
            color: #181616;
        }

        #name{
            height:35px;
            width: 500px;
            background-color: #a9a9a9;
            color: #181616;
            font-size:27px;
            border-radius:5px;
            border:1px solid #fff;
            transition: 0.7s;
            padding:1px;
        }

       #name:focus-visible{
           background:none;
           border:solid 1px #fff;
       }

       .but{
           padding-top:30px;
       }

       .button{
           font-family:Montserrat;
           font-size:30px;
           height:50px;
           width:300px;
           background-color:#fff;
           color:#181616;
           border-radius:10px;
           transition: color 0.3s linear;
       }

       .button:hover{
           color: #808080;
       }

    </style>
</head>
<body>

    <div class="intro">
        <div class="title">
            HOSPITAL
        </div>
        <div class="group">
            <a class="link" href="@Url.Action("Index", "Doctors")">ЛІКАРІ</a>
            <a class="link" href="@Url.Action("Index", "Patient")">СПИСОК ХВОРИХ</a>
            <a class="link" href="@Url.Action("Index", "Brigada")">БРИГАДИ ШВИДКОЇ ДОПОМОГИ</a>
            <a class="link" href="@Url.Action("Index", "Lab")">ЛАБОРАТОРІЯ</a>
        </div>

        <form class="form" method="post" action="@Url.Action("ThankYou", "Home")">
            <div class="form_title">
                Бажаєте проконсультуватися з лікарем?
            </div>
            <div class="group_form">
                <label for="name">Ім'я':</label>
                <input type="text" id="name" name="Name" required />
            </div>
            <div class="group_form">
                <label for="email">Email:</label>
                <input type="email" id="name" name="Email" required />
            </div>
            <div class="group_form">
                <label for="message">Введіть свої скарги: </label>
                <textarea id="name" name="Message" required></textarea>
            </div>
            <div class="but">
                <button class="button" type="submit">Відправити</button>
            </div>
        </form>

    </div>
  
</body>
</html>

