﻿@using Razor.Models
@model Product[]

@{
    ViewBag.Title = "Информация о товарах";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

@if (Model.Length > 0)
{
    <table>
        <thead>
            <tr>
                <th>Продукт</th>
                <th>Цена</th>
            </tr>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td> @p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Нет данных о товарах</h2>
}