<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        div.layout {
            background-color: lightblue;
        }

        div.view {
            border: 1px solid orange;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    @RenderSection("Header", false)
    
    <div class="view">
        @foreach (string str in new[] { "Index", "List", "Edit" })
        {
            @Html.ActionLink(str, str, null, new { style = "margin: 5px" })
        }
    </div>
    

    @if (IsSectionDefined("Body"))
    {
        @RenderSection("Body")
    }
    else
    {
        <div class="layout">
            Этот текст Body находится в компоновке
        </div>
    }

    @if (IsSectionDefined("Footer"))
    {
        @RenderSection("Footer")
    }
    else
    {
        <div class="layout">
            <h2>Это футер по умолчанию</h2>
        </div>
    }

    @RenderSection("Scripts", false)


</body>
</html>